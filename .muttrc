source $HOME/data/mutt/aliases
source $HOME/data/mutt/mail

alternative_order text/plain text/enriched text/html auto_view text/html

set abort_nosubject         = yes
set alias_file              = $HOME/data/mutt/aliases
set attach_save_dir         = $HOME/temp/
set beep                    = no
set charset                 = 'utf-8'
set date_format             = '%d.%m %H:%M'
set header_cache            = $HOME/.cache/mutt/
set help                    = no
set history_file            = $HOME/.cache/mutt_history
set history_remove_dups     = yes
set index_format            = '%4C %d %Z %-40.40F %s'
set mailcap_path            = $HOME/.config/mailcap
set pager_format            = '%* %P'
set pager_stop              = yes
set save_history            = 8192
set sidebar_divider_char    = â”‚
set sidebar_visible         = yes
set sleep_time              = 0
set status_format           = '%f %u/%m'
set status_on_top           = yes

color attachment default default
color bold default default
color compose header default default
color error default default
color hdrdefault default default
color header default default '.*'
color indicator reverse default default
color normal default default
color prompt default default
color sidebar_divider default default
color sidebar_flagged default default
color sidebar_highlight reverse default default
color sidebar_indicator reverse default default
color sidebar_new default default
color status default default
color tilde default default

bind alias g first-entry
bind alias G last-entry
bind attach e edit-type
bind attach h exit
bind attach l view-attach
bind compose E edit-headers
bind compose G last-entry
bind compose J move-down
bind compose K move-up
bind compose M postpone-message
bind compose d detach-file
bind compose e edit-message
bind compose g first-entry
bind compose m send-message
bind compose p print-entry
bind compose r rename-file
bind compose v view-attach
bind generic G bottom-page
bind generic N search-opposite
bind generic g top-page
bind generic h exit
bind generic l select-entry
bind generic = error-history
bind index D purge-message
bind index G last-entry
bind index J sidebar-next
bind index K sidebar-prev
bind index L sidebar-open
bind index e edit
bind index g first-entry
bind index l display-message
bind index r reply
bind index s sync-mailbox
bind pager D purge-message
bind pager G bottom
bind pager e edit
bind pager g top
bind pager h exit
bind pager j next-page
bind pager k previous-page
bind pager s sync-mailbox
bind pager q quit
bind pager J next-line
bind pager K previous-line

